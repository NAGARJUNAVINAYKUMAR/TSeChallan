<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_lyt_dialog_violation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_view_margin"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:padding="@dimen/activity_padding">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_dialog_violation_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_dialog_violation_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/et_margin_left"
        android:layout_marginLeft="@dimen/et_margin_left"
        android:layout_toEndOf="@id/cb_dialog_violation_select"
        android:layout_toRightOf="@id/cb_dialog_violation_select"
        android:textColor="@color/colorTextView" />

</RelativeLayout>