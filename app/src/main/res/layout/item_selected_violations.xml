<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lyt_dialog_violation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_view_margin"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:padding="@dimen/multi_dialog_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        tools:ignore="UselessParent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_selected_violation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="@string/select_violations"
            android:singleLine="true"
            android:textColor="@color/colorTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_selected_violation_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="end"
            android:text="1000"
            android:textColor="@color/colorTextView" />

        <!--<android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_selected_violation_remove"
            android:layout_width="0dp"
            android:layout_height="@dimen/close_img_height"
            android:layout_weight="0.15"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_2x" />-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_selected_violation_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="end"
            android:text="@string/remove"
            android:textColor="@color/colorRed"/>

    </LinearLayout>

</RelativeLayout>