<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lyt_content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:id="@+id/lnr_lyt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_spot"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_spot" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/spot_challan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_drunk_drive"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_drunk_drive" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/drunk_drive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_crane"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_crane" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/_41_cp_act" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_ghmc"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_ghmc" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/ghmc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_seizure"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_seizure" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/_39_b_act" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_court" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/court_disposal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_release_items" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/release_documents" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_reports" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/reports" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/content_item_lyt_height"
                android:layout_margin="@dimen/content_item_margin"
                android:layout_weight="1"
                android:background="@drawable/home_background_style"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_settings"
                    android:layout_width="@dimen/submit_img_width"
                    android:layout_height="@dimen/submit_img_width"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_settings" />

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/settings" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_hyd_city_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_bottom" />

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_margin_left"
            android:layout_marginLeft="@dimen/content_item_margin"
            android:layout_marginStart="@dimen/content_item_margin"
            android:layout_marginRight="@dimen/content_item_margin"
            android:layout_marginEnd="@dimen/content_item_margin"
            android:background="@color/colorToggleEnd" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_integrated_echallan_system"
            android:textColor="@color/colorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding"
            android:gravity="center"
            android:textStyle="italic"
            android:text="@string/integrated_e_challan_system" />

    </LinearLayout>

</RelativeLayout>